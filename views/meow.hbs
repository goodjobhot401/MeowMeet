<div class="data-panel mt-3" style="width: 75%; margin: 0 auto;">

  {{!-- 上半部 --}}
  <div class="button-back mb-3 d-flex flex-row-reverse">
    <a href="javascript:history.back()" class="pill-main pill-small">返回</a>
  </div>

  <div class="meow-panel" style="background-color: #fad9e5;">
    <div class="row">
      {{!-- 照片 carousel --}}
      {{> carousel}}
      {{!-- 文字檔案 --}}
      {{> meow-data}}
    </div>
  </div>

  {{!-- 下半部 --}}
  <div class="mt-1">
    <div class="reply-data d-flex justify-content-center">
      <div class="meow-reply">
        <i class="fa-solid fa-reply me-1"></i>
        <span class="d-inline"> Reply</span>
      </div>

      {{#if loginUser}}
      <div class="meow-like">
        {{#if meow.isLiked }}
        <form action="/meows/{{meow.id}}/unlike" class="d-inline-block" method="POST">
          <button type="submit">
            <img src="https://i.imgur.com/qEuvC6d.png" class="meow-like-img" alt="">
          </button>
        </form>
        <span class="d-inline">{{meow.likeCount}} Liked</span>
        {{else}}
        <form action="/meows/{{meow.id}}/like" class="d-inline-block" method="POST">
          <button type="submit">
            <img src="https://i.imgur.com/9ZW0y2Y.png" class="meow-like-img" alt="">
          </button>
        </form>
        <span class="d-inline">{{meow.likeCount}} Like</span>
        {{/if}}
      </div>
      {{else}}
      <div class="meow-like">
        <div class="d-inline-block">
          <button type="button">
            <img src="https://i.imgur.com/qEuvC6d.png" class="meow-like-img" alt="">
          </button>
        </div>
        <span class="d-inline">{{meow.likeCount}} Like</span>
      </div>
      {{/if}}

    </div>

    {{!-- 留言回復區 --}}
    {{> meow-reply}}
  </div>
</div>