<div class="data-panel mt-3" style="width: 75%; margin: 0 auto;">
  {{> messages}}

  <div class="button-back mb-3 d-flex flex-row-reverse">
    <a href="javascript:history.back()" class="pill-main pill-small">返回</a>
  </div>

  <div class="meow-panel" style="background-color: #fad9e5;">
    <div class="row">

      {{!-- 照片 carousel --}}
      <div class="col-6">
        <div id="carousel" class="carousel carousel-fixed slide">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://i.imgur.com/bNrd9XE.jpeg" class="d-block carousel-img" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://i.imgur.com/odIQ0SZ.jpeg" class="d-block carousel-img" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://i.imgur.com/AMFY4ej.jpeg" class="d-block carousel-img" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>

      {{!-- 文字檔案 --}}
      <div class="col-6">
        <div class="meow-data ps-3">
          {{!-- 上半部 --}}
          <div class="meow-data-top mt-4 mb-3">
            <div class="meow-title text-center p-2">
              <h3>{{meow.name}}</h3>
            </div>
          </div>

          {{!-- 下半部 --}}
          <div class="meow-data-bottom boder">
            <div class="meow-bar d-flex justify-content-center">
              <div class="meow-gender" style="background-color: lightblue; border-radius: 20px 0 0 0;">{{{genderIcon
                meow.gender}}} </div>
              <div class="meow-neuter" style="background-color: rgb(125, 205, 232);">{{{neuterIcon meow.neuter}}}</div>
              <div class="meow-age" style="background-color: rgb(78, 187, 223); border-radius: 0 20px 0 0;">{{meow.age}}
              </div>
            </div>
            <div class="meow-detail p-3 mb-2">
              <div class="meow-friendly mb-3">
                <i class="fa-solid fa-paw me-1" style="color: #ff5290;"></i>
                <span class="text-14px-reg">親人度：</span>{{{generateIcons meow.friendly}}}
              </div>
              <div class="meow-location mb-3">
                <i class="fa-solid fa-paw me-1" style="color: #ff5290;"></i>
                <span class="text-14px-reg">出沒點：</span>{{meow.location}}
              </div>
              <div class="meow-intro">
                <i class="fa-solid fa-paw me-1" style="color: #ff5290;"></i>
                <span class="text-14px-reg">簡介：</span>{{meow.intro}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-1">
    <div class="reply-data d-flex justify-content-center">
      <div>Reply</div>
      <div>Like</div>
    </div>
    <div class="reply-zone">
      <div class="reply-box">
        <div class="reply-box-head">
          <div class="user-avatar">
            <img src="https://avatars.githubusercontent.com/u/126758475?v=4" alt="User Avatar">
          </div>
          <textarea class="reply-textarea" placeholder="在這裡輸入回覆..."></textarea>
          <button class="reply-button "><i class="fa-solid fa-paper-plane"></i></button>
        </div>
        <div class="reply-box-bottom">
          <div class="mt-3">
            {{!-- {{#each reply}} --}}
            <div class="reply">
              <div class="user-avatar">
                <img src="https://avatars.githubusercontent.com/u/126758475?v=4{{this.User.avatar}}" alt="User Avatar">
              </div>
              <div class="reply-stuff">
                <div class="reply-text">
                  <span class="reply-account text-14px-med">阿雍{{this.User.account}}</span><br>
                  <span class="reply-content">虎克好可愛阿!!{{this.comment}}</span>
                </div>
                <div class="reply-data-row">
                  {{#if this.isLiked}}
                  <form action="/replies/{{this.id}}/unlike" method="POST">
                    <button type="submit" style="text-12px-reg-light">
                      讚
                    </button>
                  </form>
                  {{else}}
                  <form action="/replies/{{this.id}}/like" method="POST">
                    <button type="submit" class="text-12px-reg-gray">
                      讚
                    </button>
                  </form>
                  {{/if}}

                  <span class="text-12px-reg-gray ms-4">{{relativeTime this.createdAt}}</span>
                </div>
              </div>
            </div>
            {{!-- {{/each}} --}}
          </div>

        </div>
      </div>
    </div>
  </div>
</div>