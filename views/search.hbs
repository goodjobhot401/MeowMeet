<div class="search-zone mt-3" style="width: 90%; margin: 0 auto;">
  {{!-- 搜尋欄 --}}
  <div class="search-bar mb-3 d-flex">
    <input type="text" name="address" id="search-form" class="form-input input text-16px-reg me-3"
      placeholder="輸入想查詢的地址">
    <button class="pill-main pill-small" id="search-button" type="submit">查詢</button>
  </div>

  {{!-- google map viewport --}}
  <div id="map" class="mb-3 border"></div>
  <script> var map
    var icon
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: 25.03369, lng: 121.564128 },
        zoom: 12
      })
    }
  </script>

  {{!-- 搜尋結果欄 --}}
  <div class="search-panel mb-3 shadow-sm card" style="min-height: 300px;">
    <div class="card-header bg-primary bg-opacity-25">
      <i class="fa-solid fa-paw me-1" style="color: #ff5290;"></i>
      <span class="text-16px-reg-light">搜尋結果</span>
    </div>
    <div class="card-body d-flex flex-wrap">
      {{!-- {{#each meows}} --}}
      <div class="card me-2 mb-3" style="width: 180px;">
        <img src="https://i.imgur.com/8ztYpM0.jpeg" class="card-img-top" alt="...">
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-center">
            <span class="text-16px-med">咪寶 name {{ meow.name }}</span>
            <i class="fa-solid fa-venus" style="color: #ff5290;"></i>
            <i class="fa-solid fa-mars" style="color: #6551ff;"></i>
          </li>
          <li class="list-group-item"><span class="text-16px-reg">親人：{{meow.friendly}}</span>
            {{!-- {{#times meow.friendly}} --}}
            <i class="fa-solid fa-star" style="color: #ff5290;"></i>
            {{!-- {{/times}} --}}
          </li>
          <li class="list-group-item"><span class="text-16px-reg">簡介：{{ meow.intro }}
            </span></li>
        </ul>
      </div>
      {{!-- {{/each}} --}}

    </div>
  </div>
</div>