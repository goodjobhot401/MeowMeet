<div class="my-meows mt-5 ms-5 mb-5" style="width: 90%;">
  {{> delete-image-modal}}
  <div class="row">

    <div class="col-8">
      {{!-- 我新增的街貓區 --}}
      <div class="meows-panel mb-3 shadow-sm card" style="min-height: 300px; max-height: auto;">
        <div class="card-header bg-primary bg-opacity-25">
          <i class="fa-solid fa-paw me-1" style="color: #ff5290;"></i>
          <span class="text-16px-reg-light">我建立的街貓檔案</span>
        </div>
        {{#if meow}}
        <div class="card-body d-flex flex-wrap" id="">

          {{#each meow}}
          {{!-- 左邊頭貼 --}}
          <div class="col-3 p-2">
            <div class="meow-card d-flex" style="height: 100px;">
              <div class="col-4 meow-card-figure">
                <figure class="meow-card-img">
                  <img src="{{this.avatar}}" class="meow-img" alt="">
                </figure>
              </div>
              {{!-- 右邊資料 --}}
              <div class="col-8 meow-simple-data" style="width: fit-content;">
                <div class="meow-name"><span class="text-16px-reg-light">{{this.name}}</span></div>
                <div class="d-flex mt-1">
                  <a href="/meows/{{this.id}}/edit" class="btn-pill-main p-1" style="border-radius: 5px;">
                    Edit
                  </a>
                  <button type="button" class="btn-pill-main p-1 ms-1" style="border-radius: 5px;"
                    data-bs-toggle="modal" data-bs-target="#deleteMeowModal" value="{{this.id}}">Delete</button>
                </div>
              </div>
            </div>
          </div>
          {{/each}}

        </div>
        {{else}}
        <div class="card-body no-data d-flex flex-wrap" id="">
          <a href="/meows/create"><span class="text-16px-med-gray bulid-one"><i class="fa-regular fa-square-plus"
                style="color: #ff5290;"></i> Meow Meet</span></a>
        </div>
        {{/if}}
      </div>


      {{!-- 我新增的街貓照片區 --}}
      <div class="image-panel shadow-sm card" style="min-height: 300px;">
        <div class="card-header bg-primary bg-opacity-25">
          <i class="fa-solid fa-paw me-1" style="color: #ff5290;"></i>
          <span class="text-16px-reg-light">我上傳的街貓照片</span>
        </div>
        {{#if image}}
        <div class="card-body d-flex flex-wrap" id="">
          {{#each image}}
          {{!-- 左邊頭貼 --}}
          <div class="col-3 p-2">
            <div class="meow-card d-flex" style="width:auto; height: 100px;">
              <a href="{{this.image}}" target="_blank" class="col-6 meow-card-frame">
                <img src="{{this.image}}" class="meow-upload-img" alt="">
              </a>
              {{!-- 右邊資料 --}}
              <div class="col-6 ps-2 meow-upload-simple-data">
                <div class="meow-name"><span class="text-16px-reg-light">{{this.Meow.name}}</span></div>
                <button type="button" class="btn-pill-main mt-1 p-1 ms-1 deleteImageButton" style="border-radius: 5px;"
                  data-bs-toggle="modal" data-bs-target="#deleteImageModal" value="{{this.id}}">Delete</button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <div class="card-body no-data d-flex flex-wrap" id="">
          <span class="text-16px-med-gray">(0 張照片)</span>
        </div>
        {{/if}}
      </div>
    </div>


    <div class="col-4">
      {{!-- 我新增的協尋區 --}}
      <div class="missings-panel mb-3 shadow-sm card" style="height: 100%;">
        <div class="card-header bg-primary bg-opacity-25">
          <i class="fa-solid fa-paw me-1" style="color: #ff5290;"></i>
          <span class="text-16px-reg-light">我建立的協尋檔案</span>
        </div>
        {{#if missing}}
        <div class="card-body d-flex flex-wrap align-content-start" id="">

          {{#each missing}}
          <div class="col-6 p-2" style="height: 200px;">
            <div class="card meow-card d-flex flex-column justify-content-center align-items-center"
              style="border-radius:5px; height: 100%;">
              <figure class="missing-meow-figure">
                <img src="{{this.avatar}}" class="missing-meow-img" alt="">
              </figure>
              <div class="missing-name">
                <span class="text-16px-reg-light">{{this.name}}</span>
              </div>
            </div>
          </div>
          {{/each}}

        </div>
        {{else}}
        <div class="card-body no-data d-flex flex-wrap" id="">
          <a href="/missings/create"><span class="text-16px-med-gray bulid-one"><i class="fa-regular fa-square-plus"
                style="color: #ff5290;"></i> Missing</span></a>
        </div>
        {{/if}}
      </div>
    </div>

  </div>
</div>